@model IEnumerable<GymFinal.Models.Plan>
@{
    ViewData["Title"] = "Planes";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?fm=jpg&q=60&w=3000');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.8);
        min-height: 100vh;
        padding: 40px;
        color: white;
    }

    .btn-verde {
        background-color: #145A32;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: bold;
        margin-bottom: 20px;
    }

        .btn-verde:hover {
            background-color: #117A3B;
        }

    table {
        background-color: white;
        color: black;
        border-radius: 10px;
        padding: 20px;
        width: 100%;
    }
</style>

<div class="overlay">
    <h2>Planes</h2>
    <a asp-action="Create" class="btn-verde">Agregar Plan</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.NombrePlan</td>
                    <td>@plan.DescripcionPlan</td>
                    <td>@plan.Precio.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@plan.IdPlan" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@plan.IdPlan" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model GymFinal.Models.Socio

@{
    ViewData["Title"] = "Agregar Socio";
    var planes = ViewBag.Planes as List<GymFinal.Models.Plan>;
    var sedes = ViewBag.Sedes as List<GymFinal.Models.Sede>;
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8dGhlJTIwZ3ltfGVufDB8fDB8fHww');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.8);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        padding: 30px;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        padding: 30px;
        color: black;
        width: 100%;
        max-width: 600px;
    }

    .btn-verde {
        background-color: #145A32;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        margin-top: 20px;
        font-weight: bold;
    }

        .btn-verde:hover {
            background-color: #117A3B;
        }
</style>

<div class="overlay">
    <div class="form-container">
        <h2 class="text-center mb-4">Agregar Socio</h2>

        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Apellido"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dni"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdPlan">Plan</label>
                <select asp-for="IdPlan" class="form-control" asp-items="@(new SelectList(planes, "IdPlan", "Nombre"))">
                    <option value="">-- Seleccione un plan --</option>
                </select>
                <span asp-validation-for="IdPlan" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdSede">Sede</label>
                <select asp-for="IdSede" class="form-control" asp-items="@(new SelectList(sedes, "IdSede", "Nombre"))">
                    <option value="">-- Seleccione una sede --</option>
                </select>
                <span asp-validation-for="IdSede" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="EstaActivo" class="form-check-input" />
                <label asp-for="EstaActivo" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn-verde w-100">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

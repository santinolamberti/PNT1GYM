@model IEnumerable<GymFinal.Models.Sede>
@{
    ViewData["Title"] = "Sedes";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8dGhlJTIwZ3ltfGVufDB8fDB8fHww');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.8);
        min-height: 100vh;
        padding: 40px;
        color: white;
    }

    .btn-verde {
        background-color: #145A32;
        color: white;
        font-size: 16px;
        padding: 10px 18px;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        margin-bottom: 20px;
        display: inline-block;
    }

        .btn-verde:hover {
            background-color: #117A3B;
        }

    .table-container {
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        color: black;
    }

    .btn-accion {
        margin-right: 5px;
    }
</style>

<div class="overlay">
    <h2>Sedes</h2>

    <a asp-action="Create" class="btn-verde">Agregar Nueva Sede</a>

    <div class="table-container">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sede in Model)
                {
                    <tr>
                        <td>@sede.Nombre</td>
                        <td>@sede.Direccion</td>
                        <td>@sede.Telefono</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@sede.IdSede" class="btn btn-sm btn-warning btn-accion">Editar</a>
                            <a asp-action="Delete" asp-route-id="@sede.IdSede" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
